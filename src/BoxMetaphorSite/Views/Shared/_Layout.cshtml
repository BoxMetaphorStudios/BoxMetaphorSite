<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoxMetaphorSite</title>

    <environment names="Development">
        @*<link href="~/css/app.css" rel="stylesheet" />*@
        <link rel="stylesheet" href="~/css/StyleSheet.css" />
    </environment>
    <environment names="Staging,Production">
        @*<link href="~/css/app.min.css" asp-append-version="true" rel="stylesheet" />*@
        <link rel="stylesheet" href="~/css/StyleSheet.css" />
    </environment>

</head>
<body>
    <div class="off-canvas-wrapper">
        <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>
            <!-- See partial views info here: https://docs.asp.net/en/latest/mvc/views/partial.html -->
            <!-- More complex menu may need to be a View Component in the future: https://docs.asp.net/en/latest/mvc/views/view-components.html -->

            <!-- Left slide out menu-->
            @Html.Partial("Components/SlideOutMenu/Default")

            <!-- Top bar menu -->
            @Html.Partial("Components/TopMenu/Default")

            <!-- Orbit/Rotating Banner Images -->
            @Html.Partial("Components/Orbit")

            <!-- original content goes in this container -->
            <div data-off-canvas-content>
                    @RenderBody()
                    <hr/>
                    <footer>
                        <p>&copy; 2016 - Box Metaphor Studios</p>
                    </footer>
                <environment names="Development">
                    <script src="~/lib/jquery/dist/jquery.js"></script>
                    <script src="~/lib/foundation-sites/dist/foundation.js"></script>
                    <script src="~/js/site.js" asp-append-version="true"></script>

                </environment>
                <environment names="Staging,Production">
                    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                            asp-fallback-test="window.jQuery">
                    </script>
                    <script src="~/lib/foundation-sites/dist/foundation.min.js"></script>
                    <script src="~/js/site.min.js" asp-append-version="true"></script>
                </environment>
                <script>
                    $(document).foundation();
                </script>
                @RenderSection("scripts", required: false)
            </div>
        </div>
    </div>
</body>
</html>
